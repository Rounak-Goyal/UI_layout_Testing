<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity"
    android:background="#1B1B1B">
    <ImageView
        android:layout_width="80dp"
        android:id="@+id/logo"
        android:layout_height="80dp"
        android:layout_marginHorizontal="3dp"
        android:background="@drawable/index"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:textColor="#4A4949" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_outline_add_photo_alternate_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/capture"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:drawableLeft="@drawable/ic_outline_photo_camera_24"
        android:text="Capture new image"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:backgroundTint="#16A81C"/>
    <Button
        android:id="@+id/gallery"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/ic_outline_photo_library_24"
        android:text="Choose from gallery"
        android:gravity="center"
        android:textSize="22sp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#1489E6"
        />

</RelativeLayout>